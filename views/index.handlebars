<h1 class="text-center mb-3">{{title}}</h1>
<form action="/api/products" method="POST" class="mb-4">
    <div class="form-group mb-2">
        <label for="name"><h4>Name for new product</h4></label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group mb-2">
        <label for="name"><h4>Description</h4></label>
        <input type="text" name="description" class="form-control ">
    </div>
    <div class="form-group mb-2">
        <label for="name"><h4>Category</h4></label>
        <input type="text" name="category" class="form-control">
    </div>
    <div class="form-group mb-2">
        <label for="name"><h4>Price</h4></label>
        <input type="number" name="price" class="form-control">
    </div>
    <div class="form-group mb-2">
        <label for="name"><h4>Rating</h4></label>
        <input type="number" name="rating" class="form-control">
    </div>
    <div class="form-group mb-2">
        <label for="name"><h4>Image URL</h4></label>
        <input type="text" name="imageName" class="form-control">
    </div>
    
    

    <input type="submit" value="Create Product" class="btn btn-success btn-block mt-3">
    
</form>
    <input type="submit" value="Update Product" class="btn btn-primary btn-block mb-3">
    <input type="submit" value="Delete Product" class="btn btn-danger btn-block mb-3">
    

<h4 class="mt-3 mb-3">Products</h4>

<button onclick="myFunction()" class="btn btn-success btn-block mb-3">Show/Hide</button>
<div id="myDIV">
    <ul class="list-group">
            {{#each products}}
            <li class="list-group-item flex-column p-3 mb-2" >
                <img src={{this.imageName}} style="height:50px; width:50px; margin-right:1rem;">  {{this.articleNumber}} - {{this.name}} - <b>Description:</b> {{this.description}} <b>Category:</b> {{this.category}} <b>Price:</b>  ${{this.price}} <b>Rating:</b>  {{this.rating}}</li> {{!-- Oklart om imageName ska vara med h√§r --}}
            {{/each}}
    </ul>
</div>
        
  
<script>
function myFunction() {
  var x = document.getElementById("myDIV");
  if (x.style.display === "none") {
    x.style.display = "block";
  } else {
    x.style.display = "none";
  }
}
</script>




<a href="/api/products" class="btn btn-light mb-3">Visit API</a>

