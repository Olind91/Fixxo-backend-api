<h1 class="text-center mb-3">{{title}}</h1>
<form action="/api/products" method="POST" class="mb-4">
    <div class="form-group">
        <label for="name">Name for new product</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="name">Description</label>
        <input type="text" name="description" class="form-control">
    </div>
    <div class="form-group">
        <label for="name">Category</label>
        <input type="text" name="category" class="form-control">
    </div>
    <div class="form-group">
        <label for="name">Price</label>
        <input type="number" name="price" class="form-control">
    </div>
    <div class="form-group">
        <label for="name">Rating</label>
        <input type="number" name="rating" class="form-control">
    </div>
    <div class="form-group">
        <label for="name">Image URL</label>
        <input type="text" name="imageName" class="form-control">
    </div>
    
    

    <input type="submit" value="Create Product" class="btn btn-primary btn-block mt-3">
</form>
    
<h4>Products</h4>

<ul class="list-group">
    {{#each products}}
    <li class="list-group-item flex-column " >
        <img src={{this.imageName}} style="height:50px; width:50px; margin-right:1rem;">  {{this.articleNumber}} - {{this.name}} - <b>Description:</b> {{this.description}} <b>Category:</b> {{this.category}} <b>Price:</b>  ${{this.price}} <b>Rating:</b>  {{this.rating}}</li> {{!-- Oklart om imageName ska vara med h√§r --}}
    {{/each}}
</ul>

<a href="/api/products" class="btn btn-light mt-3 mb-3">Visit API</a>

